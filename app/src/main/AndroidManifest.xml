<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sseung.akasoschedule">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AkasoSchedule">

        <activity android:name=".SplashActivity"
            android:theme="@style/splashTheme"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CalendarActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan">
        </activity>

        <activity android:name=".ListActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan">
        </activity>

        <activity android:name=".UploadActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan">
        </activity>

        <activity android:name=".PopUpActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan">
        </activity>

        <activity android:name=".NoInternetMessage"
            android:theme="@style/Transparent"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan">
        </activity>

        <activity android:name=".NoInternetMessage2"
            android:theme="@style/Transparent"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan">
        </activity>

        <receiver android:name=".BroadCast"/>
        <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8631957304793435~3530835023"/>

    </application>

</manifest>